<script>
const CSV_URL="https://dcgcode.neocities.org/logs/data.csv";
let allData=[];

const ctx=document.getElementById('chart').getContext('2d');
const chart=new Chart(ctx,{
  type:'line',
  data:{datasets:[{label:'Depth (m)',data:[],tension:0.25,pointRadius:3,borderWidth:2,
                   borderColor:'#00e5ff',backgroundColor:'rgba(0,229,255,0.25)'}]},
  options:{
    responsive:true,animation:{duration:600},maintainAspectRatio:false,
    scales:{
      x:{type:'time',time:{unit:"minute"},grid:{color:'rgba(255,255,255,.07)'},ticks:{color:'#cdd8e7'}},
      y:{min:0,max:5,grid:{color:'rgba(255,255,255,.07)'},ticks:{color:'#cdd8e7'},title:{display:true,text:'Depth (m)'}}
    },plugins:{legend:{labels:{color:'#eaf6ff'}}}
  }
});

async function poll(){
  try{
    const res=await fetch(CSV_URL+'?'+Date.now(),{cache:'no-store'});
    const rows=(await res.text()).trim().split('\n').slice(1);
    allData=rows.map(r=>{
      const[ts,d]=r.split(',');
      return{x:new Date(ts.replace(' ','T')),y:+d};
    });
    applyFilter();
    document.getElementById('connBadge').textContent="Live";
    document.getElementById('connBadge').className="badge ok";
  }catch(err){
    document.getElementById('connBadge').textContent="Error";
    document.getElementById('connBadge').className="badge err";
  }
}

function applyFilter(){
  let data=allData;
  if(document.getElementById('rangeToggle').checked){
    document.getElementById('fromLabel').style.display='inline-flex';
    document.getElementById('toLabel').style.display='inline-flex';
    const from=document.getElementById('fromDate').value;
    const to=document.getElementById('toDate').value;
    if(from||to){
      data=data.filter(p=>{
        const d=p.x;
        return (!from||d>=new Date(from)) && (!to||d<=new Date(to+"T23:59:59"));
      });
    }
  } else {
    document.getElementById('fromLabel').style.display='none';
    document.getElementById('toLabel').style.display='none';
  }

  chart.data.datasets[0].data=data;
  chart.update();

  const tbody=document.getElementById('tbody');
  tbody.innerHTML='';
  data.slice().reverse().forEach(p=>{
    tbody.insertAdjacentHTML('beforeend',`<tr><td>${p.x.toLocaleString()}</td><td>${p.y.toFixed(2)}</td></tr>`);
  });
}

document.getElementById('rangeToggle').onchange=applyFilter;
document.getElementById('fromDate').onchange=applyFilter;
document.getElementById('toDate').onchange=applyFilter;

poll();
setInterval(poll,10000);
</script>
</body>
